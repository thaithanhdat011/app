<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AuthenticationPassword">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="168dp"
                android:layout_height="114.33dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_splash" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="Nhập mật khẩu cũ"
                    android:textColor="#42474E"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/txtMatKhauCu"
                        android:layout_width="382dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="25dp"
                        android:background="@drawable/border_radius"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="8 ký tự"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imagelookblack"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="320dp"
                        android:src="@drawable/ic_lookblack" />
                </RelativeLayout>

                <Button
                    android:id="@+id/button_Next"
                    android:layout_width="372dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/blue"
                    android:text="Tiếp tục" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>